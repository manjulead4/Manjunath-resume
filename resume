    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const navLinks = document.querySelectorAll('.nav-link');
            const contentSections = document.querySelectorAll('.content-section');

            const data = {
                experience: [
                    {
                        type: 'Machine Learning Engineer',
                        title: 'Machine Learning Engineer | Syntalix AI',
                        details: [
                            'Built and trained AI models for chatbot development using NLP and machine learning.',
                            'Contributed to intelligent response generation and data pipeline optimization.'
                        ]
                    },
                    {
                        type: 'Project',
                        title: 'Unveiling And Eradicating Online Hate Speech Using Machine Learning And Deep Learning',
                        details: [
                            'Developed machine learning and deep learning algorithms to detect and eradicate online hate speech, resulting in 4 published research papers.',
                            'Improved model accuracy for effective detection and deletion of hate speech content.',
                            'Utilized SPSS for statistical analysis and processed large datasets, demonstrating strong capabilities in data processing and analysis vital for **monitoring and reporting on campaign performance metrics and marketing KPIs**.'
                        ]
                    },
                    {
                        type: 'Project',
                        title: 'Legal ChatBot',
                        details: [
                           'Developed a Legal ChatBot using the Rasa framework, enhancing natural language understanding (NLU) and dialogue management.',
                           'Implemented custom Python actions with Rasa SDK on a Sanic web server, showcasing ability to build and deploy operational tools.',
                           'Integrated Google API for efficient query resolution, highlighting experience in **integrating and supporting operational tools** and **streamlining workflows**.'
                        ]
                    },
                    {
                        type: 'Internship',
                        title: 'AWS Cloud Engineer Intern | Magic Bus',
                        details: [
                            'Designed and deployed scalable cloud infrastructure (EC2, S3, RDS), ensuring high availability and reliability for critical data.',
                            'Managed S3 buckets for secure and efficient data storage, implementing lifecycle policies to optimize costs, demonstrating proficiency in **maintaining data hygiene** and managing data platforms.',
                            'Configured and maintained VPCs, subnets, and security groups, ensuring network security and proper resource isolation.'
                        ]
                    },
                    {
                        type: 'Internship',
                        title: 'Software Engineer Intern | Jp Morgan | Forage',
                        details: [
                            'Designed and developed robust systems for testing trading strategies against historical data, ensuring **data consistency through preprocessing, normalization, and cleaning** ‚Äì directly applicable to **maintaining data hygiene across CRM and marketing automation platforms**.',
                            'Utilized JPMorgan Chase\'s open-source library, Perspective, to create interactive, real-time data visualizations, enabling traders to **monitor live data feeds in a clear and visually engaging format**, skills transferable to **monitoring and reporting on campaign performance metrics**.'
                        ]
                    }
                ],
                skills: [
                    { category: 'Programming', items: ['Python', 'Java', 'DSA', 'SQL'] },
                    { category: 'AI/ML Frameworks', items: ['TensorFlow', 'PyTorch', 'Keras', 'Hugging Face', 'Rasa'] },
                    { category: 'Libraries', items: ['Scikit Learn', 'Pandas', 'Matplotlib'] },
                    { category: 'Cloud & DevOps', items: ['AWS (EC2, VPC, IAM, S3, RDS)', 'Docker', 'Kubernetes'] },
                    { category: 'Databases & Tools', items: ['MongoDB', 'MySQL', 'ElasticSearch', 'Kafka', 'Git/GitHub'] },
                    { category: 'Core ML Concepts', items: ['NLP', 'Deep Learning', 'Computer Vision', 'Model Deployment', 'Data Preprocessing', 'Feature Engineering'] }
                ],
                education: [
                    { institution: 'Saveetha University', detail: 'Bachelors in Computer Science Engineering (CGPA: 8.14)', year: '2024' },
                    { institution: 'Narayana Junior College', detail: 'Senior Secondary MPC (CGPA: 8.01)', year: 'N/A' },
                    { institution: 'Sri Sathya Sai Varadhi Intl. School', detail: 'Primary School (CGPA: 9.5)', year: 'N/A' }
                ],
                certificates: [
                    'Amazon AWS Cloud Practitioner Certification',
                    'Python Certificate',
                    'Machine Learning Certificate'
                ]
            };

            function populateExperience() {
                const container = document.querySelector('#experience .grid');
                container.innerHTML = ''; // Clear existing content to re-populate
                data.experience.forEach(item => {
                    const card = document.createElement('div');
                    card.className = 'experience-card bg-white p-6 rounded-xl shadow-lg cursor-pointer';
                    
                    let detailsHTML = '<ul class="text-sm text-slate-600 mt-3 list-disc list-inside space-y-1">';
                    item.details.forEach(detail => {
                        detailsHTML += `<li>${detail.replace(/\*\*(.*?)\*\*/g, '<strong class="font-semibold text-slate-700">$1</strong>')}</li>`;
                    });
                    detailsHTML += '</ul>';

                    card.innerHTML = `
                        <div class="flex items-center justify-between mb-3">
                            <span class="inline-block bg-teal-100 text-teal-800 text-xs font-semibold px-3 py-1 rounded-full uppercase">${item.type}</span>
                            <span class="text-slate-400 text-xl transition-transform duration-300 transform rotate-0">&#9660;</span> </div>
                        <h3 class="font-bold text-slate-900 text-xl mb-2">${item.title}</h3>
                        <div class="experience-card-details">
                            ${detailsHTML}
                        </div>
                    `;
                    container.appendChild(card);
                    
                    card.addEventListener('click', () => {
                        const detailsEl = card.querySelector('.experience-card-details');
                        const arrowIcon = card.querySelector('span:last-child');
                        if (detailsEl.classList.contains('open')) {
                            detailsEl.classList.remove('open');
                            arrowIcon.classList.remove('rotate-180');
                        } else {
                            // Close all other open cards first for single-open experience
                            document.querySelectorAll('.experience-card-details.open').forEach(openDetails => {
                                openDetails.classList.remove('open');
                                openDetails.closest('.experience-card').querySelector('span:last-child').classList.remove('rotate-180');
                            });
                            detailsEl.classList.add('open');
                            arrowIcon.classList.add('rotate-180');
                        }
                    });
                });
            }

            function populateSkills() {
                const container = document.querySelector('#skills .grid');
                container.innerHTML = ''; // Clear existing content
                const icons = {
                    'Programming': 'üíª',
                    'AI/ML Frameworks': 'ü§ñ',
                    'Libraries': 'üìö',
                    'Cloud & DevOps': '‚òÅÔ∏è',
                    'Databases & Tools': 'üóÑÔ∏è',
                    'Core ML Concepts': 'üß†'
                };
                data.skills.forEach(skillCat => {
                    const card = document.createElement('div');
                    card.className = 'bg-white p-6 rounded-xl shadow-lg';
                    let itemsHTML = '<ul class="space-y-2 mt-4">';
                    skillCat.items.forEach(item => {
                        itemsHTML += `<li class="text-slate-700 text-md flex items-center"><span class="text-teal-500 mr-3 text-lg">‚óè</span>${item}</li>`;
                    });
                    itemsHTML += '</ul>';
                    card.innerHTML = `<h3 class="font-bold text-teal-700 text-xl flex items-center">${icons[skillCat.category] || '‚ú®'} <span class="ml-2">${skillCat.category}</span></h3>${itemsHTML}`;
                    container.appendChild(card);
                });
            }
            
            function populateEducation() {
                const eduList = document.getElementById('education-list');
                eduList.innerHTML = ''; // Clear existing content
                data.education.forEach(edu => {
                    eduList.innerHTML += `
                        <div class="bg-white p-5 rounded-xl shadow-md">
                            <p class="font-bold text-slate-800 text-lg">${edu.institution}</p>
                            <p class="text-md text-slate-700 mt-1">${edu.detail}</p>
                            ${edu.year && edu.year !== 'N/A' ? `<p class="text-sm text-slate-500 mt-1">Graduation Year: ${edu.year}</p>` : ''}
                        </div>
                    `;
                });

                const certList = document.getElementById('certificates-list');
                certList.innerHTML = ''; // Clear existing content
                data.certificates.forEach(cert => {
                    certList.innerHTML += `<p class="bg-white p-4 rounded-xl shadow-md text-md text-slate-700 flex items-center"><span class="text-yellow-500 mr-3 text-lg">‚òÖ</span>${cert}</p>`;
                });
            }

            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    navLinks.forEach(l => l.classList.remove('active'));
                    link.classList.add('active');
                    
                    const targetId = link.getAttribute('data-target');
                    contentSections.forEach(section => {
                        if (section.id === targetId) {
                            section.classList.add('active');
                        } else {
                            section.classList.remove('active');
                        }
                    });
                });
            });

            const radarCtx = document.getElementById('skillsRadarChart').getContext('2d');
            new Chart(radarCtx, {
                type: 'radar',
                data: {
                    labels: ['Programming', 'AI/ML Fwks', 'Cloud/DevOps', 'Databases', 'ML Concepts', 'Libraries'], // Updated labels
                    datasets: [{
                        label: 'Proficiency',
                        data: [9, 9, 8, 7, 9, 8], /* Adjusted data for ML, Cloud, DB focus */
                        backgroundColor: 'rgba(13, 148, 136, 0.3)',
                        borderColor: 'rgba(13, 148, 136, 1)',
                        pointBackgroundColor: 'rgba(13, 148, 136, 1)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgba(13, 148, 136, 1)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.15)' },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            pointLabels: { 
                                font: { size: 14, weight: 'bold' },
                                color: '#334155',
                                callback: function(value) {
                                    if (value.length > 16) {
                                        return value.split(' ').map((word, i) => i === 0 ? word : word.substring(0, 16)).join('\n');
                                    }
                                    return value;
                                }
                            },
                            ticks: {
                                backdropColor: 'rgba(255, 255, 255, 0.8)',
                                color: '#64748B',
                                stepSize: 2,
                                beginAtZero: true,
                                max: 10
                            }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                             backgroundColor: 'rgba(30, 41, 59, 0.9)',
                             titleColor: '#fff',
                             bodyColor: '#e2e8f0',
                             callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw}/10`;
                                }
                            }
                        }
                    }
                }
            });

            populateExperience();
            populateSkills();
            populateEducation();
        });
    </script>
</body>
